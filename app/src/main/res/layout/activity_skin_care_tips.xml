<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_launcher_background"
    tools:context=".activities.SkinCareTipsActivity">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10sp"
        android:padding="10sp"
        app:cardElevation="10sp"
        android:layout_margin="20sp"
        app:cardCornerRadius="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/chapter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:padding="10sp"
                android:text="Kolejność nakładania kosmetyków"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chapter1"
                android:padding="10sp"
                android:text="0. Umyj ręce\n1. Demakijaż (płyn micelarny)\n2. Mycie twarzy (żel, pianka)\n3.Tonizacja (tonik, hydrolat) \n4. Serum*\n5. Krem do twarzy \n6.Krem z filtrem (min. SPF30)" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</ScrollView>